@import "product-item/product-item-template.wxss";

.product{
  display: flex;
  flex-direction: column;
}

.product .product-header{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #e5e5e5;
  background-color: #fff;
}

.product-header .product-classify-wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.product-classify-wrapper image{
  width: 40rpx;
  height: 35rpx;
  margin-bottom: 5rpx;
}

.product-classify-wrapper text{
  font-size: 24rpx;
  color: #6c6c6c;
}

.product-header .product-search{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex: auto;
  position: relative;
  height: 66rpx;
}

.product-search .search{
  position: absolute;
  top: 0;
  left: 0;
  margin: 20rpx 10rpx 0 20rpx;
}

.product-search input{
  flex: auto;
  font-size: 30rpx;
  height: 100%;
  padding-left: 64rpx;
  padding-right: 20rpx;
  border: 1rpx solid #b5b5b5;
  border-radius: 33rpx;
}

.product-search .cancel{
  flex: none;
  font-size: 28rpx;
  color: #6c6c6c;
  padding-left: 20rpx;
  margin-left: auto;
}

.product .product-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
  padding: 30rpx 75rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
}

.product-title text{
  font-size: 30rpx;
  color: #3f3f3f;
}

.product-title .active{
  color: #fe2e46;
}