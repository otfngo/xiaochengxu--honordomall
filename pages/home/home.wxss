@import "/pages/products/product-item/product-item-template.wxss";

swiper {
  width: 100%;
  height: 368rpx;
  margin-bottom: 40rpx;
}

swiper image {
  width: 100%;
  height: 368rpx;
}

.type-list {
  display: flex;
  justify-content: space-between;
  margin: 0 60rpx 40rpx 60rpx;
}

.type-list .type-list-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.type-list-item image {
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 10rpx;
}

.type-list-item text {
  font-size: 32rpx;
}

.product-list-group {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.product-list-group .group-img {
  width: 100%;
  height: 150rpx;
  margin-bottom: 20rpx;
}
